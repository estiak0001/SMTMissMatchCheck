                        <div class="recent-items-ctn">
                            <div class="recent-items-title">
                                <h2>Total Check </h2>
                            </div>
                        </div>
                        <div style="height: 450px; overflow: auto;" class="recent-items-inn">
                            <table class="table table-inner table-vmiddle">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Line</th>
                                        <th>Model</th>
                                        <th>Lot</th>
                                        <th>C. Type</th>
                                        <th>Status</th>
                                        <th>Duration</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.MobileRND_QcTaskHead_List)
                                    {
                                    <tr data-toggle="tooltip" data-placement="top" title="@item.DateString">
                                        <td class="f-500 c-cyan">@item.DateString</td>
                                        <td>Line @item.LineNo</td>
                                        <td>@item.ModelName</td>
                                        <td class="f-500 c-cyan">@item.LotNo</td>
                                        <td class="f-500 c-cyan">@item.TaskType</td>
                                        <td class="">
                                            @if (item.IsComplete == "Complete")
                                            {
                                                <p class="badge-successs">
                                                    @Html.DisplayFor(modelItem => item.IsComplete)
                                                </p>
                                            }
                                            else
                                            {
                                                <span class="badge-Dangerr">
                                                    @Html.DisplayFor(modelItem => item.IsComplete)
                                                </span>
                                            }
                                        </td>
                                        <td class="f-500 c-cyan">@item.Duration</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
