@model WebAppEs.ViewModel.Model.PartsModelViewModel
@{
    ViewData["Title"] = "Create Model";
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="fa fa-database"></i>
                                </div>
                                <div style="padding-top: 13px;" class="breadcomb-ctn">
                                    <h2>Create/Update</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-example-wrap">
                    <form asp-action="CreateModel">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Supplier" class="control-label"></label>
                                    <input asp-for="Supplier" class="form-control" />
                                    <span asp-validation-for="Supplier" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @if (@Model.IsUpdate == "Update")
                            {
                                <button type="submit" value="Update" class="btn btn-success notika-btn-success">Update</button>
                            }
                            else
                            {
                                <button type="submit" value="Create" class="btn btn-success notika-btn-success">Submit</button>
                            }
                        </div>
                    </form>
                    <div>
                        <a class="btn btn-info notika-btn-info" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

