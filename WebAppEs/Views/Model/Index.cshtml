@model IEnumerable<WebAppEs.ViewModel.Model.PartsModelViewModel>
@{ ViewData["Title"] = "Register"; }

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="fa fa-list"></i>
                                </div>
                                <div style="padding-top: 13px;" class="breadcomb-ctn">
                                    <h2>Models</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                @*<a style="float:right" class="btn btn-info" asp-action="CreateModel"> <i class="fa fa-plus pr-2"></i> Create New</a>*@
                                <a data-toggle="tooltip" asp-action="CreateModel" data-placement="left" title="Add Model" class="btn"><i class="notika-icon notika-plus-symbol"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-condensed">
                            <thead style="background-color: #d7e3ef;">
                                <tr>
                                    <th>Name</th>
                                    <th>Supplier</th>
                                    <th style="text-align:center">Action's</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Supplier)
                                        </td>
                                        <td style="text-align:center">
                                            <a style=" font-size: large; color: blue;" asp-action="CreateModel" asp-controller="Model" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

