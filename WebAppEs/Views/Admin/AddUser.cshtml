@model  WebAppEs.ViewModel.Register.RegisterViewModel

@{ ViewData["Title"] = "Register"; }

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="fa fa-users"></i>
                                </div>
                                <div style="padding-top: 13px;" class="breadcomb-ctn">
                                    <h2>User Registration</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                            <div class="breadcomb-report">
                                <a data-toggle="tooltip" asp-action="AddUser" data-placement="left" title="Add Model" class="btn"><i class="notika-icon notika-plus-symbol"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-example-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-example-wrap">
                    <form method="post">
                        @*<div asp-validation-summary="None" class="text-danger"></div>*@

                        <div class="form-group">
                            <label asp-for="EmployeeID">Employee ID <span style="color:red" class="required">*</span></label>
                            <input asp-for="EmployeeID" class="form-control" />
                            <span asp-validation-for="EmployeeID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Name">Employee Name <span style="color:red" class="required">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email <span style="color:red" class="required">*</span></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Department">Department <span style="color:red" class="required">*</span></label>
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password">Password <span style="color:red" class="required">*</span></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword">Confirm Password <span style="color:red" class="required">*</span></label>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Select Role <span style="color:red" class="required">*</span></label>
                            <ul style="list-style-type: none;">
                                @for (var i = 0; i < Model.Roles.Length; i++)
                                {
                                    <li>
                                        <input type="checkbox" asp-for="@Model.Roles[i].Selected" />
                                        <label style="margin-left:10px;" asp-for="@Model.Roles[i].Selected">@Model.Roles[i].Name</label>
                                        <input type="hidden" asp-for="@Model.Roles[i].Id" />
                                        <input type="hidden" asp-for="@Model.Roles[i].Name" />
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="row">
                            <button style="float:right" type="submit" class="btn btn-success notika-btn-success">Register</button>
                            <button style="float:right; margin-right:5px" asp-action="Users" class="btn btn-info notika-btn-info">Back To List</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







