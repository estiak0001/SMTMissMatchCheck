@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
    <!doctype html>
    <html class="no-js" lang="">
        <head>
            <meta charset="utf-8">
            <meta http-equiv="x-ua-compatible" content="ie=edge">
            <title>SMT Miss Match Checking</title>
            <meta name="description" content="">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <partial name="Gentelella/_Styles" />
            <script src="~/SiteTheme/js/vendor/modernizr-2.8.3.min.js"></script>

            <style>
                body {
                    height: 2000px!important;
                    background: #EEEEEED9;
                }

                footer {
                    position: fixed;
                    bottom: 0;
                    width: 100%;
                    /*height: 30px;
                    background: #000;
                    
                    text-align: center;
                    color: #fff;*/
                }
                .header-top-area, .footer-copyright-area {
                    background: #0b284d;
                }
                .nav.notika-top-nav .open > a, .nav.notika-top-nav .open > a:focus, .nav.notika-top-nav .open > a:hover {
                    background: #0b284d;
                }
                .nav.notika-top-nav > li > a:focus, .nav.notika-top-nav > li > a:hover {
                    text-decoration: none;
                    background-color: #0b284d;
                }
                .nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover {
                    color: #fff;
                    cursor: default;
                    background-color: #0b284d;
                    border: 1px solid #ddd;
                    border-bottom-color: transparent;
                }
                .breadcomb-list {
                    padding: 4px 20px;
                    background: #fff;
                }
                
            </style>


        </head>

        <body>
            <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
            <!-- Start Header Top Area -->
            <div class="header-top-area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="logo-area">
                                <a href="#"><img src="~/Logo/logo2.png" style="height: 32px;" /><span style="color:white; font-size:17px">SMT Miss Match Checker</span></a>
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <div class="header-top-menu">
                                <ul class="nav navbar-nav notika-top-nav">
                                    <partial name="_LoginPartial" />
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Header Top Area -->
            <div class="top_nav">
                <div class="nav_menu">
                    @await Component.InvokeAsync("NavigationMenu")
                </div>
            </div>

            <div>
                @RenderBody()
            </div>
            <!-- Start Footer area-->
            <footer class="footer footer-copyright-area footer_fixed">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="footer-copy-right">
                                <p>
                                    Copyright © 2021
                                    . Developed By - Software Department Section (Mobile R&D).
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- End Footer area-->
            <partial name="Gentelella/_Scripts" />
            @RenderSection("Scripts", required: false)
        </body>

</html>